# SymptoMap MVP Production Environment Configuration

# Database Configuration
POSTGRES_PASSWORD=your-secure-production-password
DATABASE_URL=postgresql://symptomap:your-secure-production-password@postgres:5432/symptomap
REDIS_URL=redis://redis:6379

# API Configuration
NODE_ENV=production
PORT=8787
CORS_ORIGIN=https://symptomap.com

# External Services
OPENAI_API_KEY=your-openai-api-key-here
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token-here

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production

# Frontend Configuration
VITE_API_URL=https://api.symptomap.com
VITE_WS_URL=wss://api.symptomap.com
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token-here
VITE_ENVIRONMENT=production
VITE_VERSION=1.0.0

# Monitoring
GRAFANA_PASSWORD=your-grafana-admin-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Performance
MAX_CONCURRENT_CONNECTIONS=1000
REQUEST_TIMEOUT=10000

# Logging
LOG_LEVEL=info
ENABLE_METRICS=true
